@{
}

@model Job

<h1 style="align-content:center">Add or Edit a Task</h1>

<h3>Add Task:</h3>
<div>
    <form method="post">

        <input asp-for="JobId" type="hidden" />

        @* Job (Required) *@
        <label asp-for="JobName">Task Name:</label>
        <input asp-for="JobName"/>
        <br />

        @* Due Date (Not Required) *@
        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate"/>
        <br />

        @* Quadrant (Required) *@
        <label asp-for="Quadrant">Quadrant:</label>
        <input asp-for="Quadrant"/>
        <br />

        @* Category (Not Required, Dropdown: Home, School, Work, Church) *@
        <label asp-for="Category">Category:</label>
        <select asp-for="Category">
            <option value="Home">Home</option>
            <option value="School">School</option>
            <option value="Work">Work</option>
            <option value="Church">Church</option>
        </select>
        <br />

        @* Completed (Not Required, True/False) *@
        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <br />

        @* Submit Button *@
        <button type="submit">Add/Edit Task</button>

        @* Validate Form *@
        <div asp-validation-summary="All"></div>

    </form>
</div>